---
const githubIcon =
  "http://localhost:3845/assets/b750be3141dd183719fd20b0847a935914f0ccda.svg";
const linkedinIcon =
  "http://localhost:3845/assets/62fd19caf6c60598b1870635a6cf65c96c6f4eb2.svg";
const homeIcon =
  "http://localhost:3845/assets/e18f861cadbb801f64341f748c896660d4e49f13.svg";
const productsIcon =
  "http://localhost:3845/assets/388b72b1df873951cfe47a78d13db71401f03386.svg";
const teamIcon =
  "http://localhost:3845/assets/62eac44c8d4a8c18e97d50feaca1e39cc19a358c.svg";
const aboutIcon =
  "http://localhost:3845/assets/eed437d26c90001ce0fd138b2d0fe8266a4e83a9.svg";
const phoneIcon =
  "http://localhost:3845/assets/8184c7918d91bb72e97af024706effaadb6778c6.svg";
const emailIcon =
  "http://localhost:3845/assets/b1379aac77ff02f1d65191144c67fd386f47bb51.svg";
const resumeIcon =
  "http://localhost:3845/assets/2dd5960b093653b63850cc8c066640bf86a462e7.svg";
const menuIcon =
  "http://localhost:3845/assets/570050f5de5abc9ce350ce0ff95c9de2b6b55d66.svg";
---

<div class="flex w-full flex-col border-b border-gray-200 bg-white">
  <!-- Top Bar -->
  <div class="w-full px-4 sm:px-6 lg:px-8">
    <div
      class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between py-5"
    >
      <div class="flex flex-wrap items-center gap-4">
        <div class="flex items-center gap-1.5">
          <img src={phoneIcon} alt="" class="h-5 w-5" />
          <span class="text-sm font-medium text-[#4a5565]">(802) 585-7709</span>
        </div>
        <div class="flex items-center gap-1.5">
          <img src={emailIcon} alt="" class="h-5 w-5" />
          <span class="text-sm font-medium text-[#4a5565]"
            >contact@zacharylincoln.com</span
          >
        </div>
      </div>
      <div class="hidden items-center gap-3 md:flex">
        <a
          href="#"
          class="flex items-center gap-1.5 text-sm font-medium text-[#1447e6]"
        >
          <img src={resumeIcon} alt="" class="h-[18px] w-[18px]" />
          <span>View Resume</span>
        </a>
        <div class="h-5 w-px bg-gray-200"></div>
        <a href="#"><img src={githubIcon} alt="Github" class="h-5 w-5" /></a>
        <a href="#"><img src={linkedinIcon} alt="LinkedIn" class="h-5 w-5" /></a
        >
      </div>
    </div>
  </div>

  <!-- Bottom Bar / Main Nav -->
  <div class="w-full bg-white px-4 py-3 sm:px-6 lg:px-8">
    <div class="mx-auto flex max-w-screen-xl items-center justify-between">
      <!-- Logo -->
      <div class="text-2xl font-semibold text-[#101828]">Zachary Lincoln</div>

      <!-- Desktop Nav Links -->
      <div class="hidden items-center gap-6 md:flex">
        <a
          href="#"
          class="flex flex-col items-center gap-1.5 text-sm font-medium text-[#4a5565]"
        >
          <img src={homeIcon} alt="" class="h-5 w-5" />
          <span>Home</span>
        </a>
        <a
          href="#"
          class="flex flex-col items-center gap-1.5 text-sm font-medium text-[#4a5565]"
        >
          <img src={productsIcon} alt="" class="h-5 w-5" />
          <span>Products</span>
        </a>
        <a
          href="#"
          class="flex flex-col items-center gap-1.5 text-sm font-medium text-[#4a5565]"
        >
          <img src={teamIcon} alt="" class="h-5 w-5" />
          <span>Team</span>
        </a>
        <a
          href="#"
          class="flex flex-col items-center gap-1.5 text-sm font-medium text-[#4a5565]"
        >
          <img src={aboutIcon} alt="" class="h-5 w-5" />
          <span>About Me</span>
        </a>
      </div>

      <!-- CTA & Mobile Menu Button -->
      <div class="flex items-center gap-3">
        <a
          href="#"
          class="hidden rounded-xl bg-[#1447e6] px-4 py-2.5 text-sm font-medium text-white md:block"
        >
          Work With Me
        </a>
        <a
          href="#"
          class="rounded-xl bg-[#1447e6] px-4 py-2.5 text-sm font-medium text-white md:hidden"
        >
          Contact
        </a>
        <button
          data-collapse-toggle="mobile-menu"
          type="button"
          class="inline-flex items-center justify-center rounded-xl p-2 text-gray-700 md:hidden"
        >
          <span class="sr-only">Open main menu</span>
          <img src={menuIcon} class="h-6 w-6" alt="Menu" />
        </button>
      </div>
    </div>
  </div>

  <!-- Collapsible Mobile Menu -->
  <div class="hidden w-full md:hidden" id="mobile-menu">
    <ul class="flex flex-col gap-4 p-4">
      <li><a href="#" class="block text-gray-700">Home</a></li>
      <li><a href="#" class="block text-gray-700">Products</a></li>
      <li><a href="#" class="block text-gray-700">Team</a></li>
      <li><a href="#" class="block text-gray-700">About Me</a></li>
      <li><a href="#" class="block text-gray-700">View Resume</a></li>
    </ul>
  </div>
</div>
