---


import ThemeToggle from "./ThemeToggle.astro";
---

<div class="flex w-full flex-col border-b border-gray-200 bg-white dark:bg-gray-900 dark:border-gray-700">
  <!-- Top Bar -->
  <div class="w-full px-4 lg:px-6">
    <div
      class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between py-5"
    >
      <div class="flex flex-wrap items-center gap-4">
        <div class="flex items-center gap-1.5 text-gray-500 dark:text-gray-400">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.518.759a11.024 11.024 0 007.48 7.48l.759-1.518a1 1 0 011.06-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
          <span class="text-sm font-medium text-[#4a5565] dark:text-gray-400">(802) 585-7709</span>
        </div>
        <div class="flex items-center gap-1.5 text-gray-500 dark:text-gray-400">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
          <span class="text-sm font-medium text-[#4a5565] dark:text-gray-400">contact@zacharylincoln.com</span>
        </div>
      </div>
      <div class="hidden items-center gap-3 md:flex">
        <a
          href="#"
          class="flex items-center gap-1.5 text-sm font-medium text-[#1447e6] dark:text-blue-500"
        >
          <svg class="w-[18px] h-[18px]" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm3.5 9a1.5 1.5 0 00-3 0V14a1.5 1.5 0 003 0v-3zm-1.5-6.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" clip-rule="evenodd"></path></svg>
          <span>View Resume</span>
        </a>
        <div class="h-5 w-px bg-gray-200 dark:bg-gray-700"></div>
        <a href="#" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.418 2.865 8.168 6.839 9.49.5.092.682-.217.682-.482 0-.237-.009-.868-.014-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.031-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.378.203 2.398.1 2.651.64.7 1.03 1.595 1.03 2.688 0 3.848-2.338 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.001 10.001 0 0022 12c0-5.523-4.477-10-10-10z" clip-rule="evenodd" />
          </svg>
          <span class="sr-only">GitHub</span>
        </a>
        <a href="#" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd" />
          </svg>
          <span class="sr-only">LinkedIn</span>
        </a>
      </div>
    </div>
  </div>

  <!-- Bottom Bar / Main Nav -->
  <div class="w-full bg-white dark:bg-gray-900 px-4 py-3 lg:px-6">
    <div class="mx-auto flex max-w-screen-xl items-center justify-between">
      <!-- Logo -->
      <div class="text-2xl font-semibold text-[#101828] dark:text-white">Zachary Lincoln</div>

      <!-- Desktop Nav Links -->
      <div class="hidden items-center gap-6 md:flex">
        <a
          href="#"
          class="flex flex-col items-center gap-1.5 text-sm font-medium text-[#4a5565] dark:text-gray-400"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path></svg>
          <span>Home</span>
        </a>
        <a
          href="#"
          class="flex flex-col items-center gap-1.5 text-sm font-medium text-[#4a5565] dark:text-gray-400"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"></path></svg>
          <span>Products</span>
        </a>
        <a
          href="#"
          class="flex flex-col items-center gap-1.5 text-sm font-medium text-[#4a5565] dark:text-gray-400"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.653-.124-1.28-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.653.124-1.28.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
          <span>Team</span>
        </a>
        <a
          href="#"
          class="flex flex-col items-center gap-1.5 text-sm font-medium text-[#4a5565] dark:text-gray-400"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
          <span>About Me</span>
        </a>
      </div>

      <!-- CTA & Mobile Menu Button -->
      <div class="flex items-center gap-3">
        <ThemeToggle />
        <button
          type="button"
          data-modal-target="contact-modal"
          data-modal-toggle="contact-modal"
          class="hidden rounded-xl bg-[#1447e6] px-4 py-2.5 text-sm font-medium text-white md:block"
        >
          Work With Me
        </button>
        <a
          href="#"
          class="rounded-xl bg-[#1447e6] px-4 py-2.5 text-sm font-medium text-white md:hidden"
        >
          Contact
        </a>
        <button
          data-collapse-toggle="mobile-menu"
          type="button"
          class="inline-flex items-center justify-center rounded-xl p-2 text-gray-700 dark:text-gray-400 md:hidden"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Collapsible Mobile Menu -->
  <div class="hidden w-full md:hidden" id="mobile-menu">
    <ul class="flex flex-col gap-4 p-4">
      <li><a href="#" class="block text-gray-700 dark:text-gray-200">Home</a></li>
      <li><a href="#" class="block text-gray-700 dark:text-gray-200">Products</a></li>
      <li><a href="#" class="block text-gray-700 dark:text-gray-200">Team</a></li>
      <li><a href="#" class="block text-gray-700 dark:text-gray-200">About Me</a></li>
      <li><a href="#" class="block text-gray-700 dark:text-gray-200">View Resume</a></li>
    </ul>
  </div>
</div>
